\par \pard\plain \s25\rtlch\af13\afs32\alang1025 \ltrch\lang1033\langfe1033\hich\af7\loch\sl240\slmult1\qj\widctlpar\faauto\li0\ri0\lin0\rin0\fi706\sb0\sa120\f7\fs32\lang1033\dbch\af9\langfe1033\li0\ri0\lin0\rin0\fi706\ltrpar{\loch
